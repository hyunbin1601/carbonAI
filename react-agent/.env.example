# Anthropic API Key (필수)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LangSmith Tracing (선택)
LANGSMITH_TRACING=true
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=ReAct-Agent-Template

# Tavily Search API Key (선택)
TAVILY_API_KEY=your_tavily_api_key_here

# HuggingFace Token (선택, 권장)
# Rate limit 향상 및 모델 다운로드 속도 개선
# https://huggingface.co/settings/tokens 에서 발급
HF_TOKEN=your_huggingface_token_here

# ============================================
# 캐시 설정 (Cache Configuration)
# ============================================

# Redis 캐시 사용 여부 (true/false)
# Redis가 설치되어 있지 않으면 메모리 캐시가 자동으로 사용됩니다
USE_REDIS_CACHE=true

# Redis 연결 URL (Redis 사용 시)
# 형식: redis://[host]:[port]/[db_number]
# 예시: redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/0

# 캐시 TTL (Time To Live) - 초 단위
# 기본값: 86400 (24시간)
# 오프너 질문 등 자주 반복되는 질문의 캐시 유지 시간
CACHE_TTL=86400

# 지식베이스 경로 (선택)
# 설정하지 않으면 기본값: react-agent/knowledge_base
# KNOWLEDGE_BASE_PATH=/path/to/your/knowledge_base

# Chroma DB 경로 (선택)
# 설정하지 않으면 기본값: react-agent/chroma_db
# CHROMA_DB_PATH=/path/to/your/chroma_db

# ============================================
# NET-Z MCP 서버 설정
# ============================================

# NET-Z MCP 서버 활성화 여부 (true/false)
NETZ_MCP_ENABLED=true

# NET-Z MCP 서버 URL
# 배출량 데이터 조회 및 관리 기능을 제공하는 MCP 서버
NETZ_MCP_URL=http://10.177.198.46:3662
